#include <iostream>

using namespace std;

int main() {
	
	/* not currently working with input unless I assign to a number and write the elements of the array...	
	cout << "How many numbers do you have?" << endl;
	cin >> SIZE >> endl;
	*/
	
	const int SIZE = 6;
	int numbers[SIZE];
	
	//Enter numbers.
	cout << "Enter your numbers : " << endl;
	
	for(int i = 0; i < SIZE; i++) {
		cin >> numbers[i];
	}
	
	
	// Display numbers.
	for(int i = 0; i < SIZE; i++) {
		cout << numbers[i] << " ";
	}
	
	// Sort numbers
	for (int i = 0; i < SIZE; i++) {
		for (int j =i+1; j < SIZE; j++) {
			if (numbers[i] > numbers[j]) {	// If the element is greater than the element above (j),
			int temp = numbers[i];		// Temp variable holds the current element,
			numbers[i] = numbers[j];	// Current element assigned to the element above,
			numbers[j] = temp;		// Element above is assigned to temp.
			}
		}
	}

	
	// Display numbers.
	for(int i = 0; i < SIZE; i++) {
		cout << numbers[i] << " ";
	}
	



return 0;

}
