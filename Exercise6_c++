#include <iostream>
#include <iomanip>

using namespace std;

int main()	{

    long double pi;
    pi = 3.0 + 4.0/(2.0*3.0*4.0) - 4.0/(4.0*5.0*6.0) + 4.0/(6.0*7.0*8.0) - 4.0/(8.0*9.0*10.0) + 4.0/(10.0*11.0*12.0) - 4.0/(12.0*13.0*14.0) + 4.0/(14.0*15.*16.0) - 4.0/(16.0*17.0*18.0) +4.0/(18.0*19.0*20.0);
    cout << showpoint << setprecision(30);
    cout << pi;
    
    if(pi != 3.141592653589793238462643383279)          // Correct answer: 3.141592653589793238462643383279
        cout << "\nThat ain't quite right.";

return 0;

}
